{
    "manifest_version": 2,
    "name" : "Take a break",
    "version" : "1.0",
    "description" : "Alerts the user to take a break if sitting for too long",

    "browser_action" : {
        "default_icon" : {
            "16" : "images/icon16.png",
            "24" : "images/icon24.png",
            "32" : "images/icon32.png"            
        },

        "default_title": "Get up!",
        "default_popup" : "popup.html"
    },

    "background" : {
        "scripts" : ["bg.js"],
        "peristent" : false
    },

    "permissions" : [
        "activeTab",
        "tabs"
    ]
}